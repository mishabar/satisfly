@model EliteRoute.Web.Models.SignInModel

@{
    ViewBag.Title = "SignIn";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="jumbotron col-md-6 col-md-offset-3">
    <h2>Sign In</h2>
    @using (Html.BeginForm("SignIn", "Account", FormMethod.Post))
    {
        if (Model.InvalidPassword)
        {
            <div class="form-group">
                <div class="alert alert-danger">
                    Invalid email or bad password.
                </div>
            </div>
        }
        <div class="form-group">
            @Html.TextBoxFor(m => m.Email, new { @class = "form-control", placeholder = "Email" })
            @Html.ValidationMessageFor(m => m.Email)
        </div>
        <div class="form-group">
            @Html.PasswordFor(m => m.Password, new { @class = "form-control", placeholder = "Password" })
            @Html.ValidationMessageFor(m => m.Password)
        </div>
        <div class="form-group text-center">
            <button type="submit" class="btn btn-lg btn-primary">Submit</button>
        </div>
        <div class="form-group text-center">
            @Html.ActionLink("Forgot Password", "ForgotPassword", "Account", null, new { style = "color: #FFF" })
        </div>
        <div class="form-group text-center">
            @Html.ActionLink("Sign Up", "signUp", "Account", null, new { style = "color: #FFF" })
        </div>
    }
</div>